{% set navbarActive = 'forum' %}
{% extends 'TecAytPortalBundle:Common:layout.html.twig' %}

{% block content %}
    <section id="forum" class="container">
        <div class="center">
            <h2>Foro AMA y trasciende</h2>
            {% if app.user.role is defined %}
            <a class="btn btn-primary readmore pull-right" href="{{ path('tec_ayt_portal_forum_process') }}">Crear un tema nuevo <i class="fa fa-plus"></i></a>
            {% endif %}
        </div>

        <div class="blog">
            <div class="row">
                <div class="col-md-12">
                    <div class="blog-item">
                        {% for topic in topics %}
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 text-center">
                                    <div class="entry-meta">
                                        <span id="publish_date">{{ topic.timestamp|date('j M') }}</span>
                                        <span><i class="fa fa-user"></i> <a href="#">{{ topic.userId.username }}</a></span>
                                        <span><i class="fa fa-comment"></i> <a href="#">{{ topic.getRepliesCount() }} Respuestas</a></span>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-10 blog-content">
                                    <h2><a href="#">{{ topic.title }}</a></h2>
                                    <h3>
                                        {{ topic.content }}
                                    </h3>
                                    <a class="btn btn-primary readmore" href="{{ path('tec_ayt_portal_forum_view', {'id': topic.topicId}) }}">Ver respuestas <i class="fa fa-angle-right"></i></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div><!--/.blog-item-->
                    {#
                    <ul class="pagination pagination-lg">
                        <li><a href="#"><i class="fa fa-long-arrow-left"></i>Previous Page</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">Next Page<i class="fa fa-long-arrow-right"></i></a></li>
                    </ul><!--/.pagination-->
                    #}
                </div><!--/.col-md-8-->
            </div><!--/.row-->
        </div>
    </section><!--/#blog-->
{% endblock %}
