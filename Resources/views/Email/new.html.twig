{% extends 'TecAytPortalBundle:Email:layout.html.twig' %}
{% block content %}
    <h1>Se registro un nuevo usuario</h1>
      </div>
        <div class="box-body">
            <h4>Información General</h4>
            <dl class="dl-horizontal">
                <dt>Nombre</dt>
                <dd>{{ user.fullName }}</dd>
                <dt>Username</dt>
                <dd>{{ user.username }}</dd>
                <dt>Email</dt>
                <dd>{{ user.email }}</dd>
                <dt>Rol</dt>
                <dd>{{ user.getRoleName() }}</dd>
                <dt>Fecha de nacimiento</dt>
                <dd>{{ user.birthDate|date('d/m/Y') }}</dd>
                <dt>Sexo</dt>
                <dd>
                    {% if user.gender %}
                        Masculino
                    {% else %}
                        Femenino
                    {% endif %}
                </dd>
                <dt>Estado</dt>
                <dd>{{ user.state }}</dd>
                <dt>Ciudad</dt>
                <dd>{{ user.city }}</dd>
                <dt>Trabajo</dt>
                <dd>{{ user.work }}</dd>
                <dt>Educación</dt>
                <dd>{{ user.getEducationName() }}</dd>
            </dl>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
      <h3>Recuerda que este usuario necesita ser activado desde el panel de control</h3>
{% endblock %}