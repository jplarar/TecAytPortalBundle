{% set navbarActive = '' %}
{% extends 'TecAytPortalBundle:Common:layout.html.twig' %}

{% block content %}
    <section class="user-type">
        <div class="container">
            <h1>Nuevo Usuario</h1>
            {% form_theme form 'TecAytPortalBundle:Form:fields.html.twig' %}
            {{ form(form) }}
        </div>
    </section>
{% endblock %}

{% block footerAssets %}
    {{ parent() }}
    <!-- Include Date picker -->
    <script type="text/javascript" src="{{ asset('bundles/tecaytportal/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/tecaytportal/plugins/datepicker/datepicker3.css') }}" />

    <script>
        $(document).ready(function() {
            $('#user_birthDate').datepicker({
                format: "yyyy-mm-dd",
                startView: 2
            });
        });
    </script>
{% endblock %}